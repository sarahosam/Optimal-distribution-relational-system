<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ordertoday.OrderToDayActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/order_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#439A97"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="@string/orders_today"
        android:textColor="#F5F5F5"
        android:textSize="45sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_order"
        android:layout_below="@+id/order_bar"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/text_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:text="@string/loading"
        android:textSize="40sp"
        android:textColor="#439A97"/>
    <ProgressBar
        android:id="@+id/prog_bar"
        android:layout_width="105dp"
        android:layout_height="110dp"
        android:layout_above="@+id/text_View"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>